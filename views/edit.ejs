<% include ./partials/header %>
    <% include ./partials/nav %>
    
        <html>

        <body class="style">
            <div class="container">
                <div class="col-md-6 col-md-offset-3">
                    <h2 class="color">EDIT STUDENT</h2>
                </div>
                <div class="row">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <h2 class="color">SCHOOL INFORMATION SYSTEM</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <form method="POST" action="/student/<%= data._id%>?_method=PUT">
                                <fieldset>
                                    <legend><%= data.firstname %> <%= data.middlename %> <%= data.lastname %></legend>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[firstname]" class="form-control" value="<%=data.firstname%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[middlename]" class="form-control" value="<%=data.middlename%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[lastname]" class="form-control" value="<%=data.lastname%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <select name="data[gender]" class="form-control">
                                            <option value="male">male</option>
                                            <option value="female">female</option>
                                    </select>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[address]" class="form-control" value="<%=data.address%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[email]" class="form-control" value="<%=data.email%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[phone_no]" class="form-control" value="<%=data.phone_no%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[DOB]" class="form-control" value="<%=data.DOB%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[state]" class="form-control" value="<%=data.state%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[LGA]" class="form-control" value="<%=data.LGA%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[course]" class="form-control" value="<%=data.course%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="file" name="data[image]" class="form-control">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% include ./partials/footer %>
        </body>
        </html>