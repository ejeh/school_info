<% include ./partials/header %>
    <% include ./partials/nav %>
    
        <html>

        <body class="style">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 class="color">NEW STUDENT</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <h2 class="color">SCHOOL INFORMATION SYSTEM</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <form method="POST" action="/studentAll">
                                <fieldset>
                                    <legend>Register</legend>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[firstname]" class="form-control" placeholder="firstname" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[middlename]" class="form-control" placeholder="middlename" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[lastname]" class="form-control" placeholder="lastname" required>
                                        </div>
                                        <div class="col-md-6">
                                    <select name="data[gender]" class="form-control">
                                            <option value="male">male</option>
                                            <option value="female">female</option>
                                    </select>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[address]" class="form-control" placeholder="address" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[email]" class="form-control" placeholder="email" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[phone_no]" class="form-control" placeholder="phone no" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[DOB]" class="form-control" placeholder="date of birth" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[state]" class="form-control" placeholder="state" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[LGA]" class="form-control" placeholder="LGA" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[course]" class="form-control" placeholder="course" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="file" name="data[image]" class="form-control">
                                        </div>
                                    </div>

                                    <div>
                                        <button type="submit" class="btn btn-default btn-lg">Submit</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
            <% include ./partials/footer %>
        </body>

        </html>